{
	"compilerOptions": {
		"composite": true,
		"target": "ES2022",
		"useDefineForClassFields": true,
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@gatewai/api-client": ["../../packages/api-client/src/index.ts"],
			"@gatewai/core": ["../../packages/core/src/index.ts"],
			"@gatewai/react-canvas": ["../../packages/react-canvas/src/index.ts"],
			"@gatewai/react-store": ["../../packages/react-store/src/index.ts"],
			"@gatewai/rpc-client": ["../../packages/rpc-client/src/index.ts"],
			"@gatewai/ui-kit": ["../../packages/ui-kit/src/index.ts"],
			"@gatewai/core/types": ["../../packages/core/src/types/index.ts"],
			"@gatewai/core/browser": ["../../packages/core/src/browser/index.ts"]
		}
	},
	"include": [
		"src",
		"backend",
		"../../packages/*/src",
		"../../nodes/*/src",
		"../../packages/*/src/**/*.tsx",
		"../../packages/*/src/**/*.ts",
		"../../packages/*/generated/**/*.ts"
	]
}
