{
	"compilerOptions": {
		"composite": true,
		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noEmit": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"vite.config.ts",
		"trigger.config.ts",
		"shared",
		"backend/src/tasks/processors/video-compositon-component.jsx"
	]
}
