{
	"compilerOptions": {
		"composite": true,
		"target": "ES2023",
		"lib": ["ES2023"],
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"module": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"outDir": "backend/dist",
		"rootDir": "../../",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["backend/src"]
}
