{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build", "db:generate"],
			"outputs": ["dist/**"],
			"inputs": ["$TURBO_DEFAULT$", ".env"]
		},
		"be:build": {
			"cache": false
		},
		"db:generate": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"db:seed": {
			"cache": false
		},
		"db:reset": {
			"cache": false
		},
		"db:deploy": {
			"cache": false
		},
		"dev": {
			"persistent": true,
			"inputs": ["$TURBO_DEFAULT$", ".env.development"]
		},
		"start-cli": {
			"inputs": ["$TURBO_DEFAULT$", ".env"]
		},
		"start-mcp": {
			"inputs": ["$TURBO_DEFAULT$", ".env"]
		},
		"dev-mcp": {
			"inputs": ["$TURBO_DEFAULT$", ".env.development"]
		},
		"test": {
			"dependsOn": ["^build", "db:generate"],
			"cache": false
		}
	}
}
