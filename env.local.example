# --- App Configuration ---
PORT=8081
VITE_BASE_URL=http://localhost:8081
BASE_URL=http://localhost:8081
GCS_ASSETS_BUCKET=gatewai-media

# --- Secrets (Set your own values) ---
GEMINI_API_KEY=your-gemini-api-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Path to your Google Cloud Service Account JSON key
GOOGLE_APPLICATION_CREDENTIALS_PATH=/absolute/path/to/your/gcp-key.json
BETTER_AUTH_SECRET=your-better-auth-secret
GATEWAI_API_KEY=your-gatewai-api-key

# --- Database & Redis ---
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/gatewai_db
REDIS_HOST=redis
REDIS_PORT=6379

# --- MCP ---
MCP_PORT=4001
MCP_URL=http://gatewai-mcp:4001/mcp

# --- Logging & Debug ---
LOG_LEVEL=debug
DEBUG_LOG_MEDIA=false
DISABLE_EMAIL_SIGNUP=false


MAX_CONCURRENT_WORKFLOW_JOBS=5
MAX_CONCURRENT_ASSISTANT_JOBS=5