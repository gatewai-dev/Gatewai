# Stage 0: Base setup
FROM node:22-bullseye-slim AS base
WORKDIR /app
ENV NODE_ENV=production

RUN apt-get update && apt-get install -y openssl && rm -rf /var/lib/apt/lists/*
ENV GRPC_POLL_STRATEGY=epoll1

# Stage 1: Pruner
FROM base AS pruner
RUN npm install -g turbo
COPY turbo.json package.json pnpm-workspace.yaml pnpm-lock.yaml ./
COPY packages/ packages/
COPY apps/ apps/
RUN turbo prune @gatewai/mcp-server --docker

# Stage 2: Builder
FROM base AS builder

RUN apt-get update && apt-get install -y --no-install-recommends \
    python3 build-essential git ca-certificates \
    && ln -s /usr/bin/python3 /usr/bin/python \
    && rm -rf /var/lib/apt/lists/*

COPY --from=pruner /app/out/json/ .
COPY --from=pruner /app/out/pnpm-lock.yaml ./pnpm-lock.yaml

RUN corepack enable && pnpm install --frozen-lockfile

COPY --from=pruner /app/out/full/ .

# Build the app (assuming no Prisma generation needed for MCP server)
RUN pnpm run build --filter=@gatewai/mcp-server...

# Deploy production-ready folder
RUN pnpm deploy --filter=@gatewai/mcp-server --prod --legacy /app/deploy

WORKDIR /app/deploy

# Stage 3: Runner
FROM base AS runner

# Minimal runtime dependencies (no graphics libs assumed needed for MCP)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd --system --gid 1001 nodejs && \
    useradd --system --uid 1001 -m -g nodejs gatewai

ENV COREPACK_HOME=/home/gatewai/.cache/corepack

WORKDIR /app
# Copy the fully prepared deployment folder
COPY --from=builder --chown=gatewai:nodejs /app/deploy .
RUN corepack enable && \
    mkdir -p /home/gatewai/.cache/corepack && \
    chown -R gatewai:nodejs /home/gatewai

USER gatewai
EXPOSE 4001

# Use the correct start command for MCP server only
CMD ["pnpm", "run", "start-mcp"]